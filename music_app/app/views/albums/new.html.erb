<form action="<%= band_albums_url(@band.id) %>" method="POST">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

<label for="title">Title</label>
<input type="text" id="title" value="" name="album[title]">

<label for="year">Year</label>
<input type="text" id="year" value="" name="album[year]">
<br>
<label for="album_type">Album Type</label>
<label for="studio">Studio</label>
<input type="radio" id="studio" value="studio" name="album[album_type]">

<label for="live">Live</label>
<input type="radio" id="live" value="live" name="album[album_type]">

<br>
<input type="submit" value="Make New Album">
<br>
<a href="<%= band_url(@band) %> ">Back To Band</a>

</form>